<!doctype html>
<html lang="en">
    <head>
        <title><%- locals.title %></title>
        <meta charset="utf-8">
        <meta name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link
            href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap"
            rel="stylesheet">

        <link rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

        <link rel="stylesheet" href="/login/css/style.css">
        <style>
            .dark-mode {
        background-color: rgb(17, 16, 16);
        & p,
        h2,
        span,td {
          color: #cccccc;
        }
        & .lightMode {
          display: block;
        }
        & .darkMode {
          display: none;
        }
      }
      .lightMode {
        display: none;
      }
        </style>

    </head>

    <body class="img js-fullheight"
        style="background-image: url(/login/images/bg.jpg);">

        <section class="ftco-section" style="padding-top: 0px;">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-5">
                        <h2 class="heading-section">Add Movie</h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap p-0">
                            <form action="/FAV/add" method="post"
                                class="signin-form"
                                enctype="multipart/form-data"
                                >
                                <div class="form-group d-flex">

                                    <input type="text" class="form-control"
                                        placeholder="Movie Id"
                                        name="id"
                                        required />
                                </div>
                                <div class="form-group d-flex">

                                    <input type="text" class="form-control"
                                        placeholder="Movie Name"
                                        name="title"
                                        required />
                                </div>
                                <div class="form-group d-flex"
                                    style="margin-bottom: 0;">
                                    <input type="file" id="file"
                                        name="image" multiple />
                                    <label for="file" class="btn-2">Up Image</label>

                                    <input type="text" class="form-control"
                                        placeholder="Movie Year"
                                        name="year"
                                        required />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control"
                                        placeholder="Movie Plot"
                                        name="plot"
                                        required />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control"
                                        placeholder="Movie Languages"
                                        name="languages"
                                        required />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control"
                                        placeholder="Movie Companies"
                                        name="companies"
                                        required />
                                </div>

                                <div class="form-group"
                                    style="margin-top: 20px;">
                                    <a href="/FAV/" class="text-end">back</a>
                                    <button type="submit"
                                        class="form-control btn btn-primary submit px-3">Submit</button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script src="login/js/jquery.min.js"></script>
        <script src="login/js/popper.js"></script>
        <script src="login/js/bootstrap.min.js"></script>
        <script src="login/js/main.js"></script>

    </body>
</html>
